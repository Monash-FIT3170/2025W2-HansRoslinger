{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "description": "Google's stock price over time.",
    "data": {
        "url": "data/stocks.csv"
    },
    "transform": [
        {
            "filter": "datum.symbol==='GOOG'"
        }
    ],
    "mark": {
        "type": "line",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal"
        },
        "y": {
            "field": "price",
            "type": "quantitative"
        },
        "tooltip": [
            { "field": "date", "type": "temporal", "title": "Date" },
            { "field": "price", "type": "quantitative", "title": "Price"}
        ]
    }
}
